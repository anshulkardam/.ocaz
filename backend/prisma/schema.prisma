generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String     @unique
  username  String     @unique
  password  String
  avatar    String?
  createdAt DateTime   @default(now())
  posts     Post[]
  Bookmarks Bookmarks[]
  
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  type      String
  price     Int
  images    String[]
  date      DateTime
  venue     String
  address   String
  city      String
  langitude Float
  longitude Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId

  PostDetails PostDetails?
  Bookmarks   Bookmarks?
}

model PostDetails {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  desc       String
  directions String?
  time       String?
  alcohol    Boolean?
  tickets    Int?
  vip        Int?
  post       Post     @relation(fields: [postId], references: [id])
  postId     String   @unique @db.ObjectId
}

model Bookmarks {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  post   Post   @relation(fields: [postId], references: [id])
  userId String @unique @db.ObjectId
  postId String @unique @db.ObjectId
  @@unique([userId,postId])
}
